<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <title>Blog - Pyae Sone Myo</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inconsolata&family=Montserrat&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="css/styles.css" />
  <link rel="stylesheet" href="css/blog.css" />
</head>

<body>
  <script src="https://cdn.jsdelivr.net/gh/studio-freight/lenis@0.2.28/bundled/lenis.js"></script>
  <script>
    const lenis = new Lenis({});

    function raf(time) {
      lenis.raf(time);
      requestAnimationFrame(raf);
    }

    requestAnimationFrame(raf);
  </script>
  <div id="cursor"></div>
  <div id="loading-wrapper" style="position: absolute; z-index: 10000">
    <div class="frame-wrapper">
      <div style="height: 100%"></div>
    </div>
  </div>
  <div class="frame-wrapper">
    <div class="frame">
      <section class="py-4 unselectable nav-bar sticky-top">
        <div class="row px-5">
          <div class="col-md-auto logo pe-5 me-4">
            <a href="#top" class="logo-text">
              <strong>blog</strong>.pyaesonemyo.dev
            </a>
          </div>
          <a class="col-1 text-end inconsolata link-btn" href="https://pyaesonemyo.dev/">Home</a>
          <div class="col dropdown inconsolata">
            <button class="ps-4 link-btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
              Menu
            </button>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="https://projects.pyaesonemyo.dev">Projects</a></li>
              <li><a class="dropdown-item" href="#">Another action</a></li>
              <li>
                <a class="dropdown-item" href="#">Something else here</a>
              </li>
            </ul>
          </div>
        </div>
      </section>

      <section class="py-5 px-5">
        <h2 class="category-title text-end text-uppercase">Latest</h2>
        {{#with (get_latest pages)}}
        <h1 class="text-end inconsolata">{{title}}</h1>
        <p>
          {{{get_content_slice content.text 300 true}}}...
        </p>
        <div class="row justify-content-between">
          <div class="col">
            <button type="button" class="btn inconsolata btn-outline-dark hvr-sweep-to-right">
              Read More
            </button>
          </div>
          <div class="col text-end">
            <span class="card-issue-footer">{{get_datetime createdTime}} • {{get_readtime content.text}}</span>
          </div>
        </div>
        {{/with}}
      </section>

      <section class="py-5 px-5 cards-container">
        <div class="row">
          {{#each pages}}
          {{!-- {{^if (is_latest this)}} --}}
          {{!-- {{/if}} --}}
          <div class="col">
            <div class="card card-issue" style="width: 15rem">
              <div class="card-body">
                <h5 class="card-title">
                  {{title}}
                </h5>
                <p class="card-text">
                  {{{get_content_slice content.text 100 false}}}...
                </p>
                <span class="card-issue-footer">{{get_datetime createdTime}} • {{get_readtime content.text}}</span>
              </div>
            </div>
          </div>
          {{else}}
          <div class="col">
            This place is empty...
          </div>
          {{/each}}
        </div>
      </section>
      <div style="height: 1000px"></div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
    crossorigin="anonymous"></script>
  <script src="js/cursor.js"></script>
  <script src="js/loading.js"></script>
</body>

</html>