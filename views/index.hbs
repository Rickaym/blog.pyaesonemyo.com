<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <title>Blog - Pyae Sone Myo</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
  <link rel="icon" type="image/x-icon" href="https://pyaesonemyo.dev/favicon.ico">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inconsolata&family=Montserrat&display=swap" rel="stylesheet" />
  {{!-- <link rel="stylesheet" href="https://pyaesonemyo.dev/css/styles.css" /> --}}
  <link rel="stylesheet" href="../../root/css/styles.css" />
  <link rel="stylesheet" href="css/index.css" />
</head>

<body>
  <script src="https://cdn.jsdelivr.net/gh/studio-freight/lenis@0.2.28/bundled/lenis.js"></script>
  <script>
    const lenis = new Lenis({});

    function raf(time) {
      lenis.raf(time);
      requestAnimationFrame(raf);
    }

    requestAnimationFrame(raf);
  </script>
  <div id="cursor"></div>
  <div id="loading-wrapper" style="position: absolute; z-index: 10000">
    <div class="frame-wrapper">
      <div style="height: 100%"></div>
    </div>
  </div>
  <div class="frame-wrapper">
    <div class="frame">
      {{> navbar}}

      <section class="py-5 px-5">
        <h2 class="category-title text-end text-uppercase">Latest</h2>
        {{#with (get_latest pages)}}
        <a href="./{{slug}}.html">
          <h1 class="text-end inconsolata">{{title}}</h1>
        </a>
        <p>
          {{{get_content_slice content.text 300 true}}}...
        </p>
        <div class="row justify-content-between">
          <div class="col">
            <a href="./{{slug}}.html">
              <button type="button" class="btn inconsolata btn-outline-dark hvr-sweep-to-right">
                Read More
              </button>
            </a>
          </div>
          <div class="col text-end">
            <span class="card-issue-footer">{{get_datetime createdTime}} • {{get_readtime content.text}}</span>
          </div>
        </div>
        {{/with}}
      </section>

      <section class="py-5 px-5 cards-container">
        <div class="row">
          {{#each pages}}
          {{!-- {{^if (is_latest this)}} --}}
          {{!-- {{/if}} --}}
          <div class="col">
            <div class="card card-issue" style="width: 15rem">
              <div class="card-body">
                <h5 class="card-title">
                  {{title}}
                </h5>
                <p class="card-text">
                  {{{get_content_slice content.text 100 false}}}...
                </p>
                <span class="card-issue-footer">{{get_datetime createdTime}} • {{get_readtime content.text}}</span>
              </div>
            </div>
          </div>
          {{else}}
          <div class="col">
            This place is empty...
          </div>
          {{/each}}
        </div>
      </section>
      <div style="height: 1000px"></div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
    crossorigin="anonymous"></script>
  <script src="https://pyaesonemyo.dev/js/cursor.js"></script>
  <script src="https://pyaesonemyo.dev/js/loading.js"></script>
</body>

</html>
